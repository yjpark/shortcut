# tornado
sudo easy_install tornado

# mako
sudo apt-get install python-mako

# psutil
# sudo apt-get install python-psutil (the version is too low now)
sudo easy_install psutil

# autopy
sudo apt-get install libpng12-dev zlib1g-dev libxtst-dev

cd /tmp
git clone http://github.com/msanders/autopy.git
cd autopy
python setup.py build
sudo python setup.py install

# pybonjour
sudo easy_install pybonjour
